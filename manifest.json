{
  "name": "EKZ-Extension",
  "description": "Erm√∂glicht das Wiedereinstellen von alten Kleinanzeigen per Click.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [ "activeTab", "scripting", "declarativeNetRequest" ],
  "host_permissions": [
    "https://www.ebay-kleinanzeigen.de/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules_1.json"
    }]
  },
  "content_scripts": [
    {
      "matches": ["https://www.ebay-kleinanzeigen.de/*"],
      "css": ["button.css"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    },
    {
        "matches": ["https://www.ebay-kleinanzeigen.de/m-meine-anzeigen.html*"],
        "css": ["my-offers.css"],
        "js": ["my-offers.js"],
        "run_at": "document_idle"
      }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  }
}
